{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "Preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "customConditions": ["@mc-clustering/source"],
    "jsx": "react-jsx",
    "allowJs": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@mc-clustering/mc-datagen": ["packages/mc-datagen/dist"],
      "@mc-clustering/mc-datagen/config": ["packages/mc-datagen/src/config.ts"],
    }
  }
}
